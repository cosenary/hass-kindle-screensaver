    <main>
      <div class="p-3">
        {{#each this}}
          <h6>{{@key}}</h6>
          <table class="table">
            <tbody>
              {{#each this}}
                <tr>
                  <td style="width: 20%" class="align-middle px-3">
                    <h5 class="mb-0"><span class="badge {{transportTypeClass train}}">{{train}}</span></h5>
                  </td>
                  <td style="width: 60%" class="align-middle">
                    <h6 class="mb-0 {{isCancelled isCancelled}}">{{destination}}</h6>
                    {{#each messages}}<small class="d-block text-body-secondary">{{text}}</small>{{/each}}
                  </td>
                  <td style="width: 20%">
                    <div>
                      <h6 class="mb-0 {{isCancelled isCancelled}}">
                        <strong class="text-body-secondary {{isCancelled isCancelled}}">{{remainingTime time}}</strong>
                        {{#if delay}}<small class="badge bg-danger rounded-pill">+{{delay}}</small>{{/if}}
                      </h6>
                      <small class="text-body-secondary">{{formatDate time}}</small>
                    </div>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/each}}
      </div>
    </main>
  </body>
</html>